# 服务器配置
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
SERVER_WORKERS=1
DEBUG=true

# 数据库配置
DATABASE_URL=sqlite:///./data/aiden.db

# Qdrant向量数据库
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_COLLECTION_MEMORY=ai_memory
QDRANT_COLLECTION_FACES=face_features

# MQTT配置
MQTT_BROKER_HOST=localhost
MQTT_BROKER_PORT=1883
MQTT_USERNAME=
MQTT_PASSWORD=

# JWT认证
JWT_SECRET_KEY=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=43200

# 大模型API配置
LLM_PROVIDER=qwen
LLM_API_KEY=your-api-key-here
LLM_MODEL=qwen-max
LLM_API_BASE=https://dashscope.aliyuncs.com/api/v1

# TTS配置
TTS_PROVIDER=xunfei
TTS_API_KEY=your-tts-api-key
TTS_APP_ID=your-app-id

# 米家配置
MIJIA_CLIENT_ID=
MIJIA_CLIENT_SECRET=
MIJIA_REDIRECT_URI=

# 日志配置
LOG_LEVEL=INFO
LOG_FILE_PATH=logs/aiden.log
LOG_ROTATION=10 MB
LOG_RETENTION=7 days

# 摄像头配置
CAMERA_DEVICE_ID=0
CAMERA_WIDTH=1280
CAMERA_HEIGHT=720
CAMERA_FPS=30

# 人脸识别配置
FACE_RECOGNITION_THRESHOLD=0.6
FACE_DETECTION_INTERVAL=1.0

# 系统配置
SYSTEM_TIMEZONE=Asia/Shanghai
SYSTEM_LANGUAGE=zh_CN
